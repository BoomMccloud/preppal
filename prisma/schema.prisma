// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    // NOTE: When using mysql or sqlserver, uncomment the @db.Text annotations in model Account below
    // Further reading:
    // https://next-auth.js.org/adapters/prisma#create-the-prisma-schema
    // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string
    url      = env("DATABASE_URL")
}

// Necessary for Next auth
model Account {
    id                       String  @id @default(cuid())
    userId                   String
    type                     String
    provider                 String
    providerAccountId        String
    refresh_token            String? // @db.Text
    access_token             String? // @db.Text
    expires_at               Int?
    token_type               String?
    scope                    String?
    id_token                 String? // @db.Text
    session_state            String?
    user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
    refresh_token_expires_in Int?

    @@unique([provider, providerAccountId])
}

model Session {
    id           String   @id @default(cuid())
    sessionToken String   @unique
    userId       String
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
    id              String    @id @default(cuid())
    name            String?
    email           String?   @unique
    emailVerified   DateTime?
    image           String?
    uiLanguage      String    @default("en")  // UI language preference: en, es, zh
    accounts        Account[]
    sessions        Session[]
    // Relation: A user can have many interview sessions
    interviews      Interview[]
    resumes         Resume[]
    jobDescriptions JobDescription[]
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
}

// Email OTP verification for passwordless authentication
model EmailVerification {
    id        String    @id @default(cuid())
    email     String
    codeHash  String
    expiresAt DateTime
    createdAt DateTime  @default(now())
    usedAt    DateTime?

    @@index([email])
}

// The core model for an interview session
model Interview {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // The actual start and end times of the live session
  startedAt DateTime?
  endedAt   DateTime?

  status InterviewStatus @default(PENDING)

  // Idempotency key to prevent duplicate interview creation
  idempotencyKey String @unique

  // --- JOB CONTEXT SNAPSHOT ---
  // This data is copied from the JobDescription when the interview is created.
  // It ensures this historical record is immutable.
  jobTitleSnapshot       String?
  jobDescriptionSnapshot String?

  // --- LINK TO TEMPLATE (Optional) ---
  // This links back to the original JD in the user's library,
  // allowing us to group interviews for the same role.
  jobDescriptionId String?
  jobDescription   JobDescription? @relation(fields: [jobDescriptionId], references: [id], onDelete: SetNull)

  // --- RESUME SNAPSHOT ---
  // This data is copied from the Resume when the interview is created (if text type).
  // It ensures this historical record is immutable.
  resumeSnapshot String?

  // --- INTERVIEWER PERSONA ---
  // The persona/prompt for the AI interviewer (e.g., "Senior Technical Interviewer")
  // Can be a simple role or a full custom prompt in the future
  persona String?

  // --- INTERVIEW DURATION ---
  // How long the interview should last (enforced by the worker)
  duration InterviewDuration @default(STANDARD)

  // Relation to the resume used for this interview (optional)
  resumeId String?
  resume   Resume? @relation(fields: [resumeId], references: [id], onDelete: SetNull)

  // Relation: Each interview belongs to exactly one user
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Relation: Each interview can have one feedback report (optional)
  feedback InterviewFeedback?

  // Relation: Each interview has one transcript (stored as protobuf blob)
  transcript TranscriptEntry?

  // Guest access: One-time shareable link
  guestToken     String?   @unique
  guestExpiresAt DateTime?

  // --- BLOCK-BASED INTERVIEW SUPPORT ---
  // Template ID (references TypeScript config, not DB)
  templateId   String?

  // Whether this interview uses block-based architecture
  isBlockBased Boolean @default(false)

  // Relation: Blocks for block-based interviews
  blocks InterviewBlock[]
}

// The results/feedback from a completed interview
model InterviewFeedback {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  // A high-level summary generated by the AI
  summary String

  // Specific, actionable feedback points
  strengths           String  // Could be a markdown list

  // Detailed feedback categories
  contentAndStructure      String // Feedback on the substance and organization of answers
  communicationAndDelivery String // Feedback on verbal communication style, pacing, and clarity
  presentation             String // Feedback on non-verbal cues (e.g., eye contact, posture)

  // Relation: This feedback is for exactly one interview
  interviewId String    @unique
  interview   Interview @relation(fields: [interviewId], references: [id], onDelete: Cascade)
}

// Complete transcript for an interview session (stored as protobuf binary blob)
model TranscriptEntry {
  id          String   @id @default(cuid())
  interviewId String   @unique  // One per interview
  transcript  Bytes    // Protobuf binary blob (preppal.transcript.Transcript)
  createdAt   DateTime @default(now())

  // Relation: This transcript belongs to exactly one interview
  interview   Interview @relation(fields: [interviewId], references: [id], onDelete: Cascade)
}

// Model for the user's library of JDs
model JobDescription {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  title   String
  content String

  // Relation: Belongs to a user
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Relation: Can be the template for many interviews
  interviews Interview[]
}

model Resume {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  title   String // e.g., "Resume for Senior Frontend Roles"
  content String // The full resume text, perhaps in Markdown

  // Relation: Each resume belongs to one user
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Relation: A resume can be used in many interviews
  interviews Interview[]
}


// Enum for the status of an interview session
enum InterviewStatus {
  PENDING     // Scheduled but not started
  IN_PROGRESS // Actively happening
  COMPLETED   // Finished successfully
  ERROR       // An error occurred
}


// Enum for interview duration options
enum InterviewDuration {
  SHORT    // 10 minutes
  STANDARD // 30 minutes
  EXTENDED // 60 minutes
}

// Enum for block language (used in block-based interviews)
enum BlockLanguage {
  EN
  ZH
}

// Enum for block status (used in block-based interviews)
enum BlockStatus {
  PENDING      // Not started
  IN_PROGRESS  // Currently active
  COMPLETED    // Finished normally
  SKIPPED      // User skipped
}

// A block within a block-based interview (e.g., Chinese block, English block)
model InterviewBlock {
  id          String   @id @default(cuid())
  interviewId String
  interview   Interview @relation(fields: [interviewId], references: [id], onDelete: Cascade)

  // Block info
  blockNumber Int           // 1, 2, etc. (1-indexed)
  language    BlockLanguage
  questions   Json          // Array of question texts for this block

  // Timing
  startedAt   DateTime?
  endedAt     DateTime?
  durationSec Int?          // Actual duration

  // Status
  status      BlockStatus @default(PENDING)

  // DEPRECATED: Will be removed after migration
  transcriptId String? @unique

  // Transcript binary data (protobuf format)
  transcript   Bytes?

  // Block-level feedback (one per block)
  feedback     InterviewBlockFeedback?

  @@unique([interviewId, blockNumber])
  @@index([interviewId])
}

// Block-level feedback generated after each block completes
model InterviewBlockFeedback {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  // Link to block (one-to-one)
  blockId   String   @unique
  block     InterviewBlock @relation(fields: [blockId], references: [id], onDelete: Cascade)

  // Feedback content
  summary             String @default("")
  strengths           String @default("")
  areasForImprovement String @default("")

  @@index([blockId])
}
